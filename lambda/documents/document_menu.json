{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [],
    "resources": [],
    "styles": {},
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Frame",
                "width": "100%",
                "height": "100%",
                "backgroundColor": "rgb(221,221,221)",
                "items": [
                    {
                        "type": "Container",
                        "width": "100%",
                        "height": "100%",
                        "alignItems": "center",
                        "justifyContent": "end",
                        "items": [
                            {
                                "type": "Image",
                                "width": "100%",
                                "height": "100%",
                                "source": "${payload.imageData.image}",
                                "scale": "best-fill",
                                "overlayColor": "rgb(0,0,0,0)",
                                "align": "top",
                                "overlayGradient": "rgb(0,0,0)",
                                "position": "absolute",
                                "alignSelf": "center"
                            },
                            {
                                "type": "Text",
                                "width": "70%",
                                "height": "87%",
                                "paddingLeft": "30vw",
                                "position": "relative",
                                "text": "${payload.imageData.message}",
                                "fontSize": "32",
                                "color": "rgb(0,0,0)",
                                "textAlign": "center"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "graphics": {}
}